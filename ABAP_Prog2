
REPORT ZVK_2.

DATA V_Z TYPE i.

*PARAMETERS : p_x type i DEFAULT 20
*            p_y type i DEFAULT 15.

 SELECTION-SCREEN BEGIN OF BLOCK BKL1 WITH FRAME TITLE T.
 SELECTION-SCREEN begin of line.
   SELECTION-SCREEN COMMENT 5(20) LBL1.
   PARAMETERS p_x type i DEFAULT 20 obligatory.
 SELECTION-SCREEN end of line.

 SELECTION-SCREEN begin of line.
   SELECTION-SCREEN COMMENT 5(20) LBL2.
   PARAMETERS p_y type i DEFAULT 15 obligatory.
 SELECTION-SCREEN end of line.
 SELECTION-SCREEN END OF BLOCK BKL1.

  SELECTION-SCREEN BEGIN OF BLOCK BKL WITH FRAME TITLE T1.


  PARAMETERS : P_R1 RADIOBUTTON GROUP Grp1,
               P_R2 RADIOBUTTON GROUP Grp1,
               P_R3 RADIOBUTTON GROUP Grp1,
               P_R4 RADIOBUTTON GROUP Grp1,
               P_R5 RADIOBUTTON GROUP Grp1 default 'X'.

  SELECTION-SCREEN END OF BLOCK BKL.

  START-OF-SELECTION.
    IF P_R1 = 'X'.
    V_Z = p_x + p_y.
    WRITE :/ 'ADDITION IS', v_z.

    ELSEIF P_R2 = 'X'.
    V_Z = p_x - p_y.
    WRITE :/ 'SUBTRACTION IS',v_z.

    ELSEIF P_R3 = 'X'.
    V_Z = p_x * p_y.
    WRITE :/ 'PRODUCT IS', v_z.

    ELSEIF P_R4 = 'X'.
    V_Z = p_x / p_y.
    WRITE :/ 'DIVISION IS', v_z.

    ELSE.
*   WRITE :/ 'NONE OF THE ABOVE SELECTED'.

*   MESSAGE 'NONE SELECTED' TYPE 'I'.
    MESSAGE 'NONE SELECTED' TYPE 'S'.

    ENDIF.

  INITIALIZATION.
    LBL1 = 'ENTER FIRST NUMBER'.
    LBL2 = 'ENTER SECOND NUMBER'.
    T1 = 'ARITHMATIC OPERATIONS'.
    T = 'ENTER INPUT VALUES'.